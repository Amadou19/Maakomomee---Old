<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/login_Fragment">

    <fragment
        android:id="@+id/login_Fragment"
        android:name="com.amadoutirera.maakomome.view.authentication.Login_Fragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_login_Fragment_to_sign_Fragment"
            app:destination="@id/sign_Fragment" />
        <argument
            android:name="emailAdresse"
            app:argType="string"
            android:defaultValue="null" />
        <action
            android:id="@+id/action_login_Fragment_to_recovery_Fragment"
            app:destination="@id/recovery_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/sign_Fragment"
        android:name="com.amadoutirera.maakomome.view.authentication.Sign_Fragment"
        android:label="sign_fragment"
        tools:layout="@layout/sign_fragment" />
    <fragment
        android:id="@+id/recovery_Fragment"
        android:name="com.amadoutirera.maakomome.view.authentication.Recovery_Fragment"
        android:label="recovery_fragment"
        tools:layout="@layout/recovery_fragment" />
</navigation>
